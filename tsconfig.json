{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowJs": true,
    "sourceMap": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}