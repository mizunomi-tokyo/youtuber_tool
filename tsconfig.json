{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es2015",
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}